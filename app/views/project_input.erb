<div class="hero-unit">
  <h2>Enter Your Project Data Here</h2>
  <table class="table table-striped">
    <form method="post" action="/user/<%=current_user.id %>/project/<%=@project.id %>/input">    
      <tr>
        <th>Project Title</th>
        <th>Genres</th>
        <th>Budget</th>
      </tr>
      <tr>
        <td><input type="text" id="inputTitle" placeholder="Title" name="title"></td>
        <td><input type="text" id="inputBudget" placeholder="Budget" name="budget"></td>
        <td>
          <div class="input-prepend input-append">
            <span class="add-on">$</span>
            <input class="span2" id="appendedPrependedInput" type="text" name="bid">
            <span class="add-on">.00</span>
          </div>
        </td>
        <td><input type="text" id="inputGenres" placeholder="Genres" name="genres"></td>
      </tr>
      <tr>
        <td><button id="submit" type="submit" class="btn">Submit</button></td>
      </tr>
    </form>
  </table>
</div>
