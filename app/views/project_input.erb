<div class="hero-unit">
  <h2>Enter Your Project Data Here</h2>
    <form class="form-horizontal" method="post" action="/user/<%=current_user.id %>/project/create">    
      <div class="control-group">    
        <label class="control-label" for="inputProjectTitle">Project Title</label>
        <div class="controls">
          <input type="text" id="inputTitle" placeholder="Title" name="title">
        </div>
        <label class="control-label" for="inputGenres">Genres</label>
        <div class="controls">    
          <input type="text" id="inputGenres" placeholder="Genres" name="genres">
        </div>
        <label class="control-label" for="inputBudget">Budget</label>  
        <div class="controls">
          <div class="input-prepend input-append">
            <span class="add-on">$</span>
            <input class="span2" id="appendedPrependedInput" type="text" name="budget">
            <span class="add-on">.00</span>
          </div>
        </div>
        <div class="controls">    
          <button id="submit" type="submit" class="btn">Submit</button>
        </div>
      </div>
    </form>
</div>
